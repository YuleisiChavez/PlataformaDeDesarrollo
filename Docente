    private void btnMarcarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnMarcarActionPerformed
       String usuario= txtUsuario.getText();
      String passsword= txtPassword.getText();
      int existe =0;
        
        if (usuario.equals("") || passsword.equals("")){

                    JOptionPane.showMessageDialog(null," Por favor iniciar sesion");
                    
            }else {
            
                Metodos met = new Metodos();
                existe = met.validarLogin(usuario, passsword);
                
                if(existe == 1)
                {

                    Marcar Marcar=new Marcar(usuario); 
 
                    //línea 2-hacemos visible el formulario que queremos llamar 
                    Marcar.setVisible(true); 
                                  dispose(); 

                }
                else
                {
                     JOptionPane.showMessageDialog(null," Credenciales incorrectas");
                }
           
            }
    }//GEN-LAST:event_btnMarcarActionPerformed

